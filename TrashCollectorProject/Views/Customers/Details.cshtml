@model TrashCollectorProject.Models.ViewModel

@{
    ViewData["Title"] = "Account Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Account Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Address.StreetAddress)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address.StreetAddress)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Address.State)

        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address.State)

        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Address.Zip)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address.Zip)
        </dd>
        @if (Model.Service != null)
        {
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Service.Balance)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Service.Balance)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Service.PickupDay)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Service.PickupDay)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Service.isActive)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Customer.Service.isActive) @*WONT WORK*@
            </dd>
        }
        @if (Model.Service != null && Model.Service.SuspensionStart != null)
        {
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Service.SuspensionStart)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Service.SuspensionStart)
            </dd>
        }
        @if (Model.Service != null && Model.Service.SuspensionStart != null)
        {
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Service.SuspensionEnd)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Service.SuspensionEnd)
            </dd>
        }
    </dl>
</div>
