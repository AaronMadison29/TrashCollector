@model TrashCollectorProject.Models.CustomerViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div>
        <h4>Customer Dashboard</h4>

        @if (Model.Service == null)
        {
            <div><a asp-action="BeginService">Begin Service</a></div>
        }

        <div><a asp-action="EditAddress">Change Address</a></div>

        <div><a asp-action="Details">Account Details</a></div>

        @if (Model.Service != null)
        {
            <div><a asp-action="EditPickupDay">Change Weekly Pickup Day</a></div>
        }

        <div><a asp-action="SetupOTP">Setup a One Time Pickup</a></div>

        @if (Model.Service != null)
        {
            <div><a asp-action="Billing">Billing</a></div>
        }

        @if (Model.Service != null)
        {
            <div><a asp-action="SuspendService">Suspend Service</a></div>
        }

    </div>







