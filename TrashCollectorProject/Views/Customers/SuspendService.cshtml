@model TrashCollectorProject.Models.Service

@{
    ViewData["Title"] = "SuspendService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SuspendService</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuspendService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SuspensionStart" class="control-label"></label>
                <input asp-for="SuspensionStart" class="form-control" />
                <span asp-validation-for="SuspensionStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspensionEnd" class="control-label"></label>
                <input asp-for="SuspensionEnd" class="form-control" />
                <span asp-validation-for="SuspensionEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
