@model TrashCollectorProject.Models.EmployeeViewModel

@{
    ViewData["Title"] = "ConfirmPickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ConfirmPickup</h1>

<div>
    <h2>
        Would you like to confirm this pickup?
    </h2>
</div>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address.StreetAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address.Zip)
        </dd>
        @if (Model.Customer.Service.OneTimePickup.HasValue)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.Service.OneTimePickup)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Service.OneTimePickup)
            </dd>
        }
    </dl>
</div>
<form asp-action="ConfirmPickup">
    <div class="form-group">
        <input asp-for="Customer.IdentityUser.Id" type="submit" value="Confirm" id="id" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
